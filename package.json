{
  "name": "@sanayasfp/carbon-js",
  "version": "1.0.0",
  "description": "A modern date/time library for JavaScript and TypeScript inspired by PHP Carbon",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "date",
    "time",
    "datetime",
    "carbon",
    "moment",
    "dayjs",
    "typescript"
  ],
  "author": "Your Name <contact@sanayaavo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanayasfp/carbon-js.git"
  },
  "bugs": {
    "url": "https://github.com/sanayasfp/carbon-js/issues"
  },
  "homepage": "https://github.com/sanayasfp/carbon-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
